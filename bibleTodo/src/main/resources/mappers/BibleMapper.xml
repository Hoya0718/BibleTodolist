<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.bible.todo.domain.bible.mapper.BibleMapper">

    <select id="getBible" parameterType="int" resultType="String">
        SELECT content FROM bible WHERE bible_id = #{bible_id}
    </select>

	<select id="getTestamentList" parameterType="com.bible.todo.domain.bible.vo.BibleVo" resultType="String">
		SELECT  distinct list FROM bible WHERE testament = #{testament}
	</select>
	
	<select id="getChapter" parameterType="com.bible.todo.domain.bible.vo.BibleVo" resultType="String">
		SELECT distinct chapter FROM bible WHERE LIST = #{list};
	</select>
	
	<select id="getVerse" parameterType="com.bible.todo.domain.bible.vo.BibleVo" resultType="String">
		SELECT verse FROM bible WHERE list = #{list} and chapter = #{chapter}
	</select>
</mapper>
